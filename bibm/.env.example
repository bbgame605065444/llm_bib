# Article Agent Configuration
# Copy this file to .env and fill in your API keys

# SerpApi Key (required for Google Scholar scraping)
# Get your free API key from https://serpapi.com/
SERPAPI_KEY=your_serpapi_key_here

# DeepSeek API Key (required for AI relevance analysis)
# Get your API key from https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Optional: Adjust search and analysis parameters
MAX_RESULTS=3000
BATCH_SIZE=20
RELEVANCE_THRESHOLD=0.7