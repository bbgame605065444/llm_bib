# CS-BIBM Configuration Template
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_PATH=cs_bibm/data/conference_papers.db

# API Keys (Optional but recommended)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Redis Cache (Optional - for high performance)
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS=false

# Scraping Performance Settings
RATE_LIMIT_DELAY=1.0
BATCH_SIZE=50
MAX_PAPERS_PER_VENUE=0
MAX_WORKERS=4

# arXiv Integration
ENABLE_ARXIV_MATCHING=true
ARXIV_SIMILARITY_THRESHOLD=0.85

# Memory and Performance
MEMORY_LIMIT_MB=4000
CHECKPOINT_INTERVAL=100

# Cache Settings
CACHE_TTL_SECONDS=86400
ENABLE_FILE_CACHE=true

# Output Directories
OUTPUT_DIR=cs_bibm/output
LOG_DIR=cs_bibm/logs
CACHE_DIR=cs_bibm/cache
CHECKPOINT_DIR=cs_bibm/checkpoints

# Export Settings
DEFAULT_EXPORT_FORMAT=csv